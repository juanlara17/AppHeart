<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blue"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Welcometext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="HxM Smart Bluetooth"
        android:gravity="center"
        android:textColor="#FAFAFA"
        android:textSize="20dp" />

    <Button
        android:id="@+id/ButtonConnect"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Welcometext"
        android:text="Conectar"
        android:layout_marginRight="5dp"
        android:background="#ffe1e3e3">
    </Button>


    <Button
        android:id="@+id/ButtonDisconnect"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ButtonConnect"
        android:layout_toRightOf="@id/ButtonConnect"
        android:text="Desconectar"
        android:background="#ffe1e3e3"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="false"
        android:layout_above="@+id/HRTextBox">
    </Button>

    <EditText
        android:id="@+id/etCont"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@+id/labelHeartRate"
        android:textColor="#FAFAFA"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:layout_alignLeft="@+id/labelHeartRate"
        android:layout_alignStart="@+id/labelHeartRate"
        android:layout_below="@+id/Welcometext"
        android:paddingLeft="10dp">

        <requestFocus />

    </EditText>

    <EditText
        android:id="@+id/labelHeartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ButtonConnect"
        android:textSize="30dp"
        android:textColor="#FAFAFA"
        android:text="000" >
    </EditText>

    <TextView
        android:id="@+id/HRTextBox"
        android:textColor="#FAFAFA"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ButtonConnect"
        android:text="Heart Rate"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/InstantSpeed"
        android:layout_width="fill_parent"
        android:textColor="#FAFAFA"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelHeartRate"
        android:text="Instant Speed"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/labelInstantSpeed"
        android:layout_width="wrap_content"
        android:textColor="#FAFAFA"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/labelHeartRate"
        android:text="000" >
    </EditText>

    <TextView
        android:id="@+id/StatusTextBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelInstantSpeed"
        android:textColor="#FAFAFA"
        android:text="Estado de Conexion"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/labelStatusMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/StatusTextBox"
        android:textColor="#FAFAFA"
        android:text="Conexion" >
    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelStatusMsg"
        android:id="@+id/BorraArchivo"
        android:background="#ffe1e3e3"
        android:padding="10dp"
        android:text="Borrar Archivo"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/BorraArchivo">

        <EditText
            android:id="@+id/etActividadFisica"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textColor="#FAFAFA"
            android:textColorHint="#FAFAFA"
            android:hint="AQUI SU ACTIVIDAD FISICA"
            android:ems="10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button"
            android:layout_gravity="center_vertical"
            android:clickable="false" />


    </LinearLayout>



</RelativeLayout>
